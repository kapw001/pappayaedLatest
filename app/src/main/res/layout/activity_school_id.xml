<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.pappayaed.GetScollId.SchoolIdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/schoolid"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editsate"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/schoolid"
            android:inputType="number" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"></View>

        <Button
            android:id="@+id/getId"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/btnroundrect"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/setschoolid" />

    </LinearLayout>

</RelativeLayout>
