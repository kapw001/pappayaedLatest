<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    tools:context="com.pappayaed.pricepaldemo.approval.resondialog.ResonDialogFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_10ssp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Reason"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10ssp" />

        <EditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the reason for the rejection"
            android:paddingBottom="@dimen/_20ssp"
            android:paddingTop="@dimen/_20ssp"
            android:textColor="@color/black"
            android:textColorHint="@color/line2"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:gravity="center">

            <com.pappayaed.pricepaldemo.CustomButtonView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                custom:valueColor="@android:color/holo_red_light" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <com.pappayaed.pricepaldemo.CustomButtonView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
